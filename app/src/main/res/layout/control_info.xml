<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/background_control_info">


	<!-- Holder for three progress bars with either text or icons on each side -->
	<GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content"

		android:id="@+id/control_input_progressbar_holder"
	    android:columnCount="3"
	    android:rowCount="3">

		<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"

			android:id="@+id/progress_next_stop"
			android:layout_column="1"
			android:layout_row="0"
		    style="@android:style/Widget.Holo.ProgressBar.Horizontal">

		</ProgressBar>

		<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"

		             android:id="@+id/progress_gas"
		             android:layout_column="1"
		             android:layout_row="1"
		             style="@android:style/Widget.Holo.ProgressBar.Horizontal">

		</ProgressBar>

		<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"

		             android:id="@+id/progress_time_clock"
		             android:layout_column="1"
		             android:layout_row="2"
		             style="@android:style/Widget.Holo.ProgressBar.Horizontal">

		</ProgressBar>

    </GridLayout>

</LinearLayout>
