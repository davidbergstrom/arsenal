<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
        >

    <!-- Lägg till fler layouter för att få en TextView bredvid +-knappen -->
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/background_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        <!-- När du trycker på den här knappen kommer du att få en rutt -->
        <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/bt_get_route"
                android:text="Get Route"



                />

        <EditText
                android:id="@+id/from"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:hint="@string/et_from"
                />



        <Button
                android:id="@+id/bt_add_destination"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:text="Add destination +"


                />




        <EditText
                android:id="@+id/to"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:hint="@string/et_to"
                />


    </LinearLayout>


</LinearLayout>

