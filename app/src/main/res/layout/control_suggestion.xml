<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_control_suggestion">

	<!-- Buttons holder -->
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/control_suggestion_top_card_buttons_holder">

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/control_suggestion_top_card_button_next"
				android:src="@drawable/control_suggestion_top_card_next"
				android:layout_alignParentStart="true"
				style="@android:style/Widget.Holo.Button.Borderless"/>

		<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/control_suggestion_top_card_button_ok"
				android:src="@drawable/control_suggestion_top_card_ok"
				android:layout_alignParentEnd="true"
				style="@android:style/Widget.Holo.Button.Borderless"/>

	</RelativeLayout>

</LinearLayout>
