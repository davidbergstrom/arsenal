<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment_left"
    android:paddingTop="@dimen/fragment_control_top_padding"
    android:paddingBottom="@dimen/fragment_control_bottom_padding"
    android:paddingStart="@dimen/fragment_control_start_padding"
    android:paddingEnd="@dimen/fragment_control_end_padding"
    tools:context="com.edit.reach.fragments.ControlFragment">

		<!-- Holder for top content in ControlFragment -->
		<RelativeLayout
			android:id="@+id/container_control_top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true">

<!-- ****************************************************************************************** -->

			<!-- The following is just here for design purposes -->
			<!-- It will be added here dynamically as "control_input.xml" -->

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			              android:layout_width="match_parent"
			              android:layout_height="match_parent"
			              android:orientation="vertical"
			              android:background="@color/background_control_info">

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/control_info_top_card_holder"
						android:orientation="vertical"
						android:layout_gravity="center_horizontal"
						android:layout_marginTop="@dimen/control_info_top_card_holder_margin_top"
						android:layout_marginBottom="@dimen/control_info_top_card_holder_margin_bottom">

					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/tv_control_info_top_card_title"
							android:text="@string/tv_control_info_top_card_title"
							android:textSize="@dimen/tv_control_info_top_card_title"/>

					<!-- Icons Holder -->
					<RelativeLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">

						<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/control_info_top_card_type_icon"
								android:src="@drawable/milestone_restaurant"/>

						<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/control_info_top_card_type_icon_2"
								android:src="@drawable/milestone_restarea"
								android:layout_toEndOf="@+id/control_info_top_card_type_icon"/>

						<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/control_info_top_card_type_icon_3"
								android:src="@drawable/milestone_gasstation"
								android:layout_toEndOf="@+id/control_info_top_card_type_icon_2"/>

					</RelativeLayout>

					<!-- Specifications holder -->
					<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:id="@+id/control_info_top_card_specs_holder"
							android:orientation="vertical">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/control_info_top_card_distance"
								android:text="@string/tv_control_info_top_card_distance"
								android:textSize="@dimen/tv_control_info_top_card_specs"/>

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/control_info_top_card_time"
								android:text="@string/tv_control_info_top_card_time"
								android:textSize="@dimen/tv_control_info_top_card_specs"/>
					</LinearLayout>

				</LinearLayout>

				<!-- Holder for three progress bars with either text or icons on each side -->
				<GridLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/control_info_progressbar_holder"
						android:columnCount="3"
						android:rowCount="3"
						android:layout_gravity="center_horizontal">

					<!-- Three ProgressBars-->
					<ProgressBar
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/progress_next_stop"
							android:layout_column="1"
							android:layout_row="0"
							android:minWidth="@dimen/progress_bar_min_width"
							android:minHeight="@dimen/progress_bar_min_height"
							android:maxWidth="@dimen/progress_bar_max_width"
							android:maxHeight="@dimen/progress_bar_max_height"
							android:layout_marginStart="@dimen/progress_bar_margin_side"
							android:layout_marginEnd="@dimen/progress_bar_margin_side"
							style="@android:style/Widget.Holo.ProgressBar.Horizontal">
					</ProgressBar>

					<ProgressBar
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/progress_gas"
							android:layout_column="1"
							android:layout_row="1"
							android:minWidth="@dimen/progress_bar_min_width"
							android:minHeight="@dimen/progress_bar_min_height"
							android:maxWidth="@dimen/progress_bar_max_width"
							android:maxHeight="@dimen/progress_bar_max_height"
							android:layout_marginStart="@dimen/progress_bar_margin_side"
							android:layout_marginEnd="@dimen/progress_bar_margin_side"
							style="@android:style/Widget.Holo.ProgressBar.Horizontal">
					</ProgressBar>

					<ProgressBar
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/progress_time_clock"
							android:layout_column="1"
							android:layout_row="2"
							android:minWidth="@dimen/progress_bar_min_width"
							android:minHeight="@dimen/progress_bar_min_height"
							android:maxWidth="@dimen/progress_bar_max_width"
							android:maxHeight="@dimen/progress_bar_max_height"
							android:layout_marginStart="@dimen/progress_bar_margin_side"
							android:layout_marginEnd="@dimen/progress_bar_margin_side"
							style="@android:style/Widget.Holo.ProgressBar.Horizontal">
					</ProgressBar>

					<!-- TextViews to accompany the ProgressBars -->
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/tv_control_info_next_stop_left"
							android:layout_column="0"
							android:layout_row="0"
							android:text="@string/tv_control_info_next_stop_left"
							android:textSize="@dimen/tv_control_info_progress_bar_text"
							android:layout_gravity="end"/>

					<TextView
							android:id="@+id/tv_control_info_next_stop_right"
							android:layout_column="2"
							android:layout_row="0"
							android:text="@string/tv_control_info_next_stop_right"
							android:textSize="@dimen/tv_control_info_progress_bar_text"/>

					<TextView
							android:id="@+id/tv_control_info_gas_left"
							android:layout_column="0"
							android:layout_row="1"
							android:text="@string/tv_control_info_gas_left"
							android:textSize="@dimen/tv_control_info_progress_bar_text"
							android:layout_gravity="end"/>

					<TextView
							android:id="@+id/tv_control_info_gas_right"
							android:layout_column="2"
							android:layout_row="1"
							android:text="@string/tv_control_info_gas_right"
							android:textSize="@dimen/tv_control_info_progress_bar_text"/>

					<TextView
							android:id="@+id/tv_control_info_time_clock_left"
							android:layout_column="0"
							android:layout_row="2"
							android:text="@string/tv_control_info_time_clock_left"
							android:textSize="@dimen/tv_control_info_progress_bar_text"
							android:layout_gravity="end"/>

					<TextView
							android:id="@+id/tv_control_info_time_clock_right"
							android:layout_column="2"
							android:layout_row="2"
							android:text="@string/tv_control_info_time_clock_right"
							android:textSize="@dimen/tv_control_info_progress_bar_text"/>

				</GridLayout>

			</LinearLayout>

<!-- ****************************************************************************************** -->

		</RelativeLayout>

		<!-- Holder for bottom content in ControlFragment -->
		<RelativeLayout
				android:id="@+id/container_control_bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="30dp">

<!-- ****************************************************************************************** -->

			<!-- The following is just here for design purposes -->
			<!-- It will be added here dynamically as "control_input.xml" -->

			<!-- Holder for 4 buttons. When button is pressed switch src to <<name>> + _pressed
			- for example "input_restaurant_pressed" and for the other buttons "input_toilet_shaded"  -->
			<GridLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					>

				<ImageButton
						android:id="@+id/button_control_input_restaurant"
						android:src="@drawable/input_restaurant"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_row="0"
						android:layout_margin="@dimen/input_button_margin"
						style="@android:style/Widget.Holo.Button.Borderless"
						/>

				<ImageButton
						android:id="@+id/button_control_input_restarea"
						android:src="@drawable/input_restarea"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="0"
						android:layout_row="1"
						android:layout_margin="@dimen/input_button_margin"
						style="@android:style/Widget.Holo.Button.Borderless"
						/>

				<ImageButton
						android:id="@+id/button_control_input_toilet"
						android:src="@drawable/input_toilet"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:layout_row="0"
						android:layout_margin="@dimen/input_button_margin"
						style="@android:style/Widget.Holo.Button.Borderless"
						/>

				<ImageButton
						android:id="@+id/button_control_input_gasstation"
						android:src="@drawable/input_gasstation"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:layout_row="1"
						android:layout_margin="@dimen/input_button_margin"
						style="@android:style/Widget.Holo.Button.Borderless"
						/>

			</GridLayout>

<!-- ****************************************************************************************** -->

		</RelativeLayout>

</RelativeLayout>
